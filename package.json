{
  "name": "image-tiler",
  "version": "3.19.1",
  "description": "Ceres Imaging Tile Server",
  "type": "module",
  "scripts": {
    "dev": "npx nodemon -e js,xml,json --expose-gc --experimental-modules --es-module-specifier-resolution=node server",
    "dev:inspect": "npm run dev --inspect=0.0.0.0:9229",
    "start": "node --expose-gc --experimental-modules --es-module-specifier-resolution=node server",
    "test": "NODE_ENV=test node --expose-gc ./node_modules/.bin/jest --forceExit",
    "test:watch": "npm run test --watch",
    "test:coverage": "npm run test --collect-coverage",
    "lint": "eslint . --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "test"
    ]
  },
  "author": "Ceres Dev Team",
  "license": "ISC",
  "repository": "https://github.com/ceresimaging/image-tiler",
  "main": "server.js",
  "dependencies": {
    "@mapbox/sphericalmercator": "~1.1.0",
    "aws-sdk": "^2.707.0",
    "cors": "^2.8.5",
    "express": "~4.16.4",
    "mapnik": "file:/src/node-mapnik",
    "morgan": "^1.9.1",
    "redlock": "^4.1.0",
    "sharp": "^0.25.4",
    "unzipper": "^0.10.10",
    "validator": "^12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "babel-jest": "^24.9.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^9.0.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2",
    "uuid": "^8.2.0"
  }
}
